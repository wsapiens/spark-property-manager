<!DOCTYPE html>
<html>
  <head>
    <% include head %>
    <meta name="csrf-token" content=<%= csrfToken %>>
    <script type="text/javascript" src="/javascripts/commons.js"></script>
    <script type="text/javascript" src="/javascripts/unit-manager.js"></script>
  </head>
  <body>
    <% include header %>
    <div class="container-fluid">
      <div class="row">
        <% include panel %>
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
          <br>
          <h1 class="h4"><%= title %></h1>
          <br>
          <form>
            <label for="property-select" class="select ui-select">Property:</label>
            <select class="form-select" name="select-native-1" id="property-select">
              <option value="1">Select Property</option>
            </select>
          </form>
          <br>
          <form>
            <label for="unit-name-text">Unit Name:</label>
            <input type="text" class="form-control input-sm" name="unit-name-text" id="unit-name-text" value="">
            <br>
            <label class="form-check-label" for="is-building-checkbox">This Unit Is Building Itself</label>
            <input type="checkbox" class="form-check-input" name="is-building-checkbox" id="is-building-checkbox">
            <!-- <input type="radio" name="radio-enhanced" id="is-building-radio" data-enhanced="true"> -->
          </form>
          <br>
          <form align="right">
            <button id="submit-button" class="btn btn-sm btn-outline-primary">Submit</button>
          </form>
          <br>
          <hr>
          <br>
          <button id="edit-button" class="btn btn-sm btn-outline-secondary">Edit Selected</button>
          <button id="delete-button" class="btn btn-sm btn-outline-secondary">Delete Selected</button>
          <br><br>
          <table id="units" class="display" style="border-collapse:collapse;border-spacing:0;width:100%">
            <thead>
              <tr>
                <th><input name="select_all" value="1" type="checkbox"></th>
                <th>Id</th>
                <th>Street</th>
                <th>UnitName</th>
                <th>IsBuiling</th>
              </tr>
            </thead>
            <tfoot>
              <tr>
                <th></th>
                <th>Id</th>
                <th>Street</th>
                <th>UnitName</th>
                <th>IsBuiling</th>
              </tr>
            </tfoot>
          </table>
          <br><br>
        </main>
      </div>
      <% include footer %>
    </div>
  </body>
</html>
